<?xml version = "1.0" encoding = "UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="singletonBean" class="com.oonurkuru.spring.beans.BeanScopes.SingletonBean" scope="singleton">
        <property name="var" value="Default Value"/>
    </bean>

    <bean id="prototypeBean" class="com.oonurkuru.spring.beans.BeanScopes.PrototypeBean" scope="prototype">
        <property name="var" value="Default Value"/>
    </bean>
</beans>